{% extends 'base.html.twig' %}

{% block body %}
    <h1>Line</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ line.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ line.designation }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ line.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ line.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('line_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('line_edit', { 'id': line.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
